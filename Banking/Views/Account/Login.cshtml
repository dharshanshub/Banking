@model Banking.Models.LoginViewModel
@using Microsoft.AspNetCore.Http
@using Banking.Models
@{
    ViewData["Title"] = "Login";
 
    
    Layout = "_Layout";

}
<body>
    <div class = login1>
    <div class ="container p-5">
<div class ="card shadow mt-5 m-auto w-50 ">
     
    <div class= "card-header bg-info p-2 h3 text-center">Sign in</div>
    <div class = "card-body">
        <form asp-action ="Login" asp-route-returnUrl=@ViewBag.ReturnUrl>
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
            
       
         <div class = "form-group">
             <label asp-for="AccNumber" class="col-form-label">  </label>     
             <input asp-for="AccNumber" class="form-control"/>
             <span asp-validation-for="AccNumber" class="text-danger"></span>
</div>
         <div class="form-group">
           <label asp-for="Password" class="col-form-label"></label>
           <input asp-for="Password" class="form-control"/>
           <span asp-validation-for="Password" class="text-danger"></span>
</div>
<input type="Submit" value="Sign In" class="btn btn-success"/>
</form>
</div>
</div>
</div>
</div>
</body>
